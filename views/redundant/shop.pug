extends ../layouts/main-layout

block styles
    link(rel="stylesheet", href="/css/forms.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://pngriver.com/wp-content/uploads/2018/04/Download-Product-Png-Image-59157-For-Designing-Projects.png", alt="Product Image")
                            .card__content
                                h2.product__price 100
                                p.product__description
                            .card__action
                                button.btn Add to Cart
        else
            h1 No products